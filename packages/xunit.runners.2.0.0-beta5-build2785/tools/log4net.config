<?xml version="1.0" encoding="utf-8" ?>
<!-- Debug log4net configuration file -->
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net debug="true">

    <appender name="APPLICATION" type="log4net.Appender.RollingFileAppender">
      <file value="logs\ADGLog.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-5p %d %m%n" />
      </layout>
    </appender>

    <appender name="TEST" type="log4net.Appender.RollingFileAppender">
      <file value="logs\ADGTest.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-5p %d %m%n" />
      </layout>
    </appender>

    <logger name="ADGLogger">
      <level value="DEBUG" />
      <appender-ref ref="APPLICATION" />
    </logger>

    <logger name="TestLogger">
      <level value="DEBUG" />
      <appender-ref ref="TEST" />
    </logger>

    <logger name="Spring">
      <level value="ERROR" />
    </logger>

  </log4net>
</configuration>